<h1>Editing comment</h1>

<% form_for(@comment) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.hidden_field "post_id", :value => @post.id %>
    <%= f.hidden_field "user", :value => current_user.login %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>
